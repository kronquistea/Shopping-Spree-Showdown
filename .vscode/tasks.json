{
    "tasks": [
        {
            "type": "cppbuild",
            // the label here needs to match the value for preLaunchTask
            "label": "C/C++: g++ build main file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                //${fileDirName} will resolve to be the directory of whichever tab is active when the debugger is launched
                //include any .cpp, .o, or .a files needed to perform the build here
                // you can use ${fileDirName}*.cpp to include all .cpp files in the directory just be careful since all the pitfalls of *.cpp still apply
                "${fileDirname}/main.cpp",
                //specify the output file name. Should match the program field in launch
                "-o",
                "${fileDirname}/main.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}